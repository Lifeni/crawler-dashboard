<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700&display=swap" rel="stylesheet">
    <title>Dashboard</title>
</head>
<body>
    <script>
        const changeCanvas = ()=>{
            const div =  document.querySelector('.word-count')
          const canvas = document.querySelector('.word-count > canvas')
          console.log(canvas);
          canvas.width = div.getBoundingClientRect().width
        }
        document.addEventListener('DOMContentLoaded',changeCanvas)
        window.addEventListener('resize', changeCanvas)
    </script>
</body>
</html>